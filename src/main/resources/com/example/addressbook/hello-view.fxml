<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.addressbook.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label text="Welcome to the Home Inventory Manager Application.   You must agree to the following terms and conditions before you can use the application." wrapText="true" />
  <TextArea fx:id="termsAndConditions" editable="false" wrapText="true" />
  <CheckBox fx:id="agreeCheckBox" onAction="#onAgreeCheckBoxClick" text="I agree to the terms and conditions." />

  <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
    <Button text="Cancel" />
    <Button fx:id="nextButton" disable="true" onAction="#onNextButtonClick" text="Next" />
  </HBox>
  <Label fx:id="welcomeText" />
  <Button onAction="#onHelloButtonClick" text="Hello!" />
  <Button onAction="#onLoginButtonClick" text="Login" />
  <Button fx:id="registerBtn" onAction="#onRegisterButtonClick" text="Register" />
</VBox>
