<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.addressbook.ItemsController"
           orientation="HORIZONTAL"
           prefHeight="400.0" prefWidth="600.0"
           dividerPositions="0.15">

    <!-- Left side menu -->
    <VBox fx:id="sideMenu" prefWidth="200.0" spacing="1" style="-fx-background-color: #2C2F33;">
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 5 10 5 10;">
            <Label text="All Folders" style="-fx-font-size: 10px; -fx-text-fill: white;" HBox.hgrow="ALWAYS"/>
        </HBox>
        <!-- Rooms menu item -->
        <HBox fx:id="roomsItem" alignment="CENTER_LEFT" onMouseClicked="#onItemClicked"
              style="-fx-padding: 5 10 5 10;">
            <Label text="Rooms" style="-fx-text-fill: white;" HBox.hgrow="ALWAYS"/>
            <Button fx:id="addRoomButton" text="+" onAction="#addNewRoom"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Main content area -->
    <AnchorPane fx:id="mainContentArea" prefWidth="400.0">
        <!-- Content will go here -->
    </AnchorPane>
</SplitPane>